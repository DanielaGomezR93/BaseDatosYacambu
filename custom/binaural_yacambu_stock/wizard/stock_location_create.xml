<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_location_create_wizard" model="ir.ui.view">
	<field name="name">stock.location.create.wizard.view</field>
	<field name="model">stock.location.create.wizard</field>
	<field name="type">form</field>
	<field name="arch" type="xml">
	    <form>
		<sheet>
                    <label for="name" class="oe_edit_only"/>
                    <h1><field name="name"/></h1>
		    <group>
			<group>
			    <field name="scrap_location"/>
			    <field name="location_id"/>
			</group>
			<group>
		    	    <field name="return_location"/>
			</group>
		    </group>
		</sheet>
		<footer>
		    <button name="action_create_stock_location" string="Crear"
			    type="object" class="oe_highlight"/>
               	    <button string="Cancelar" class="btn btn-default" special="cancel"/>
		</footer>
	    </form>
	</field>
    </record>
</odoo>
