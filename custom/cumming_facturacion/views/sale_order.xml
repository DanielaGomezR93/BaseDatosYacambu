<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_form_sale_order_detail_cumming" model="ir.ui.view">
            <field name="name">ajustes en pedido cumming</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
               <xpath expr="//notebook/page[@name='order_lines']/field[@name='order_line']/tree/field[@name='price_unit']" position="attributes">
                   <attribute name="readonly">1</attribute>
               </xpath>
               <xpath expr="//notebook/page[@name='order_lines']/field[@name='order_line']/form/group/group/field[@name='price_unit']" position="attributes">
                   <attribute name="readonly">1</attribute>
               </xpath>
            </field>
        </record>
        <record id="view_form_sale_order_detail_cumming_remove_readonly" model="ir.ui.view">
            <field name="name">ajustes en pedido cumming para admin</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="groups_id" eval="[(6,0, [ref('cumming_inventario.group_show_cost_on_product')])]" /><!--puede ser base.group_system-->
            <field name="arch" type="xml">
               <xpath expr="//notebook/page[@name='order_lines']/field[@name='order_line']/tree/field[@name='price_unit']" position="attributes">
                   <attribute name="readonly">0</attribute>
               </xpath>
                <xpath expr="//notebook/page[@name='order_lines']/field[@name='order_line']/form/group/group/field[@name='price_unit']" position="attributes">
                   <attribute name="readonly">0</attribute>
               </xpath>
            </field>
        </record>
    </data>
</odoo>