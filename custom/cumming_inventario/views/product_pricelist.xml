<odoo>
    <data>
        <record id="product_pricelist_action_cumming" model="ir.actions.act_window">
            <field name="name">Pricelists</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.pricelist.item</field>
            <field name="view_mode">tree,form</field>
            <!--<field name="search_view_id" ref="product_pricelist_view_search" />-->
            <!--<field name="context">{"default_base":'list_price'}</field>-->
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a new pricelist
              </p><p>
                A price is a set of sales prices or rules to compute the price of sales order lines based on products, product categories, dates and ordered quantities.
                This is the perfect tool to handle several pricings, seasonal discounts, etc.
              </p><p>
                You can assign pricelists to your customers or select one when creating a new sales quotation.
              </p>
            </field>
        </record>

        <!---->
        <menuitem id="menu_product_pricelist_item" name="Precios de productos" parent="stock.menu_stock_inventory_control" action="product_pricelist_action_cumming"  sequence="3" active=""/><!--<menuitem id="menu_product_pricelist_main" name="Pricelists" parent="product_menu_catalog" action="product.product_pricelist_action2" groups="product.group_product_pricelist" sequence="3" active="False"/>-->
        <!--lista de items-->

        <record id="item_price_search_cummin" model="ir.ui.view">
            <field name="name">product.template.search.inherit.pricelist.item</field>
            <field name="model">product.pricelist.item</field>
            <field name="inherit_id" ref="product.product_pricelist_item_view_search"/>
            <field name="arch" type="xml">
                <field name="pricelist_id" position="before">
                    <field string="Producto" name="alternative_full" />
                </field>
            </field>
        </record>

        
        
        <record id="product_pricelist_item_tree_view_cummin" model="ir.ui.view">
            <field name="name">Lista de pricelist items</field>
            <field name="model">product.pricelist.item</field>
            <field name="inherit_id" ref="product.product_pricelist_item_tree_view"/>
            <field name="arch" type="xml">
                
                <field name="min_quantity" position="before">
                    <field name="percent_profit" widget="percentage"/>
                    <field name="product_cost_cumming_tmpl" />
                    <field name="product_fob_cumming_tmpl" />
                </field>
                <field name="min_quantity" position="attributes">
                    <attribute name="optional">hide</attribute>
                </field>
                <field name="date_start" position="attributes">
                    <attribute name="optional">hide</attribute>
                </field>
                <field name="date_end" position="attributes">
                    <attribute name="optional">hide</attribute>
                </field>

            </field>
        </record> 
        <!--form de product template-->
        <record id="product_pricelist_cumming" model="ir.ui.view">
            <field name="name">Ajuste en lista de precios cumming</field>
            <field name="model">product.pricelist</field>
            <field name="inherit_id" ref="product.product_pricelist_view"/>
            <field name="arch" type="xml">
                
                <field name="company_id" position="after">
                    <button name="recompute_pricelist_by_product" type="object" class="oe_stat_button" string="Recalcular precios en productos" icon="fa-">
                    </button>
                    
                </field>
                <!--pricelist_rules-->
                <xpath expr="//page[@name='pricelist_rules']/field[@name='item_ids']/tree/field[@name='min_quantity']" position="attributes">
                   <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//page[@name='pricelist_rules']/field[@name='item_ids']/tree/field[@name='date_start']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//page[@name='pricelist_rules']/field[@name='item_ids']/tree/field[@name='date_end']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//page[@name='pricelist_rules']/field[@name='item_ids']/tree/field[@name='date_end']" position="after">
                    <field name="percent_profit" widget="percentage"/>
                    <field name="product_cost_cumming_tmpl" />
                    <field name="product_fob_cumming_tmpl" />
                    
                </xpath>
                <!---->
            </field>
        </record>        

        <!--formulario de item-->
        <record id="product_pricelist_cumming_item" model="ir.ui.view">
            <field name="name">Ajuste en item lista de precios cumming</field>
            <field name="model">product.pricelist.item</field>
            <field name="inherit_id" ref="product.product_pricelist_item_form_view"/>
            <field name="arch" type="xml">
                
                <field name="product_id" position="after">
                   <field name="product_cost_cumming" attrs="{'invisible':[('applied_on', '!=', '0_product_variant')]}"/>
                </field>

                <field name="min_quantity" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="date_start" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="date_end" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="compute_price" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="applied_on" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <xpath expr="//field[@name='product_tmpl_id']" position="after">
                    <xpath expr="//field[@name='fixed_price']" position="move"/>
                </xpath>
                <field name="product_tmpl_id" position="after">
                    <field name="product_cost_cumming_tmpl" attrs="{'invisible':[('applied_on', '!=', '1_product')]}"/>
                    <field name="product_fob_cumming_tmpl" attrs="{'invisible':[('applied_on', '!=', '1_product')]}"/>
                    <field name="percent_profit" attrs="{'invisible':[('applied_on', '!=', '1_product')]}" widget="percentage"/>
                   <!-- <field name="fixed_price"  string="Precio" />-->
                   
                </field>
            </field>
        </record>       
             
    </data>
</odoo>