<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
	<record id="hr_allowance_view_search" model="ir.ui.view">
	    <field name="name">hr.allowance.view.search</field>
	    <field name="model">hr.allowance</field>
	    <field name="arch" type="xml">
		<search string="Complementos Salariales">
		    <field name="name" string="Complemento Salarial"/>
		    <field name="code" string="CÃ³digo"/>
		    <separator/>
		    <filter string="Archivado" name="inactive" domain="[('active', '=', False)]"/>
		</search>
	    </field>
	</record>

	<record id="hr_allowance_view_tree" model="ir.ui.view">
	    <field name="name">hr.allowance.view.tree</field>
	    <field name="model">hr.allowance</field>
	    <field name="arch" type="xml">
		<tree editable="bottom" delete="false">
		    <field name="active" invisible="1"/>
		    <field name="name"/>
		    <field name="code"/>
		    <field name="value"/>
		    <field name="description"/>
		</tree>
	    </field>
	</record>

	<record id="hr_allowance_view_kanban" model="ir.ui.view">
            <field name="name">hr.allowance.kanban</field>
            <field name="model">hr.allowance</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" sample="1">
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div>
                                    <strong><field name="name"/></strong>
                                </div>
                                <div>
                                    <strong><field name="code"/></strong>
                                </div>
                                <div>
                                    <span><field name="description"/></span>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

	<record id="hr_allowance_view_form" model="ir.ui.view">
	    <field name="name">hr.allowance.view.form</field>
	    <field name="model">hr.allowance</field>
	    <field name="arch" type="xml">
		<form delete="false">
		    <header>
		    </header>
		    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" default_focus="1" placeholder="Nombre"/>
                            </h1>
                        </div>
			<group>
			    <field name="active" invisible="1"/>
			    <group>
			    	<field name="code"/>
			    	<field name="value"/>
			    </group>
			    <group>
			    	<field name="description"/>
			    </group>
			</group>
		    </sheet>
		</form>
	    </field>
    	</record>

	<record id="hr_allowance_action" model="ir.actions.act_window">
	    <field name="name">Complementos Salariales</field>
	    <field name="res_model">hr.allowance</field>
	    <field name="view_mode">kanban,tree,form</field>
	</record>
    </data>
</odoo>
