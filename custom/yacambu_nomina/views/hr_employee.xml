<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_yacambu_nomina_hr_employee_form" model="ir.ui.view">
            <field name="name">yacambu.nomina.inherit.hr.employee.view.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
		<field name="department_id" position="after">
		    <field name="headquarter_id" widget="selection"/>
		</field>
		<notebook position="inside">
		    <page name="allowances" string="Complementos Salariales">
			<field name="allowance_line_ids">
			    <tree string="Complementos Salariales" editable="bottom">
				<field name="allowance_id"/>
				<field name="code"/>
				<field name="value"/>
				<field name="description"/>
			    </tree>
			</field>
		    </page>
		</notebook>
            </field>
        </record>
    </data>
</odoo>
