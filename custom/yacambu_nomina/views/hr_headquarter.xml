<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
	<record id="hr_headquarter_view_tree" model="ir.ui.view">
	    <field name="name">hr.headquarter.view.tree</field>
	    <field name="model">hr.headquarter</field>
	    <field name="arch" type="xml">
		<tree delete="false">
		    <field name="name" optional="show"/>
		    <field name="city_id" optional="show"/>
		    <field name="state_id" optional="show"/>
		    <field name="country_id" optional="hide"/>
		</tree>
	    </field>
	</record>

	<record id="hr_headquarter_view_form" model="ir.ui.view">
	    <field name="name">hr.headquarter.view.form</field>
	    <field name="model">hr.headquarter</field>
	    <field name="arch" type="xml">
		<form delete="false">
		    <header></header>
		    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" default_focus="1" placeholder="Nombre"/>
                            </h1>
                        </div>
			<group>
			    <span class="o_form_label o_td_label" name="address_name">
				<b>Dirección</b>
			    </span>
			    <div class="o_address_format">
				<field name="street" placeholder="Calle..." class="o_address_street"/>
				<field name="street2" placeholder="Calle 2..." class="o_address_street"/>
				<field name="city_id" placeholder="Ciudad" class="o_address_city"/>
				<field name="state_id" class="o_address_state" placeholder="Estado" 
				       context="{'country_id': country_id, 'default_country_id': country_id, 'zip': zip}"/>
				<field name="zip" placeholder="C.P" class="o_address_zip"/>
				<field name="country_id" placeholder="País" class="o_address_country"/>
                            </div>
			</group>
		    </sheet>
		</form>
	    </field>
    	</record>
	
	<record id="hr_headquarter_view_kanban" model="ir.ui.view">
            <field name="name">hr.headquarter.kanban</field>
            <field name="model">hr.headquarter</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" sample="1">
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div>
                                    <strong><field name="name"/></strong>
                                </div>
                                <div>
                                    <span><field name="state_id"/>&amp;nbsp;</span>
				    <span>-&amp;nbsp;</span>
                                    <span><field name="city_id"/>&amp;nbsp;</span>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

	<record id="hr_headquarter_action" model="ir.actions.act_window">
	    <field name="name">Sedes Administrativas</field>
	    <field name="res_model">hr.headquarter</field>
	    <field name="view_mode">kanban,tree,form</field>
	</record>
    </data>
</odoo>
