<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_purchase_order_form_inherited_binaural_compras_form" model="ir.ui.view">
            <field name="name">Extension de formulario de compra: agregar campos</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">

                <field name="user_id" position="before">
	                <field name="filter_partner"/>
                </field>
                <!--add fields: vat,phone,address,business_name-->
                <field name="partner_id" position="after">
                    <field name="business_name" force_save="1" readonly="1" attrs="{'invisible':[('partner_id','=',False)]}"/>
                    <field name="vat" force_save="1" readonly="1" attrs="{'invisible':[('partner_id','=',False)]}"/>
                    <field name="phone" force_save="1" readonly="1" attrs="{'invisible':[('partner_id','=',False)]}"/>
                    <field name="address" force_save="1" readonly="1" attrs="{'invisible':[('partner_id','=',False)]}"/>            
                </field>

                <field name="amount_tax" position="after">
                    <field name="amount_by_group_base" widget="tax-group-custom-field" nolabel="1" colspan="2" attrs="{'invisible': [('amount_tax', '=', 0)]}"/>
                    <field name="amount_by_group" widget="tax-group-custom-field" nolabel="1" colspan="2" attrs="{'invisible': [('amount_tax', '=', 0)]}"/>          
                </field>

            </field>
        </record>
    </data>
</odoo>