<odoo>
  <data>
	  <record id="res_config_settings_inherit_view_form" model="ir.ui.view">
	        <field name="name">res.config.settings.inherit.view.form</field>
	        <field name="model">res.config.settings</field>
	        <field name="priority" eval="100"/>
	        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
	        <field name="arch" type="xml">
		        <xpath expr="//div[@id='invoicing_settings']" position="after">
			        <h2>Retenciones</h2>
			        <div class="col-12 o_setting_box" id="use_retention">
	                    <div class="o_setting_left_pane">
	                    </div>
				        <div class="o_setting_right_pane">
                            <div class="row mt16">
                                <label for="use_retention" class="col-lg-3 o_light_label"/>
                                <field name="use_retention" options="{'no_create_edit': True, 'no_open': True}"/>
                            </div>
	                    </div>
	                </div>
			        <div attrs="{'invisible':[('use_retention','=', False)]}" class="row mt16 o_settings_container">
				        <div class="col-12 col-lg-6 o_setting_box" id="retention_iva">
		                    <div class="o_setting_left_pane">
		                    </div>
					        <div class="o_setting_right_pane">
	                            <div>
		                            <span class="o_form_label">Cuenta de Retenciones de IVA</span>
			                        <div class="text-muted">
			                            Ingrese la cuenta contable para las retenciones de IVA de proveedor
			                        </div>
	                                <field name="account_retention_iva" attrs="{'required':[('use_retention','=', True)]}" options="{'no_create_edit': True, 'no_open': True}"/>
	                            </div>
		                    </div>
		                </div>

				        <div class="col-12 col-lg-6 o_setting_box" id="retention_islr">
					        <div class="o_setting_left_pane">
		                    </div>
		                    <div class="o_setting_right_pane">
	                            <div>
		                            <span class="o_form_label">Cuenta de Retenciones de ISLR</span>
			                        <div class="text-muted">
			                            Ingrese la cuenta contable para las retenciones de ISLR de proveedor
			                        </div>
	                                <field name="account_retention_islr" attrs="{'required':[('use_retention','=', True)]}" options="{'no_create_edit': True, 'no_open': True}"/>
	                            </div>
		                    </div>
		                    </div>

				        <div class="col-12 col-lg-6 o_setting_box" id="jorrnal_retention_customer">
		                    <div class="o_setting_left_pane">
		                    </div>
					        <div class="o_setting_right_pane">
						        <span class="o_form_label">Diario de Retenciones de Clientes</span>
		                        <div class="text-muted">
		                            Ingrese el diario para las retenciones de cliente
		                        </div>
                                <field name="journal_retention_client" attrs="{'required':[('use_retention','=', True)]}" options="{'no_create_edit': True, 'no_open': True}"/>
		                    </div>
		                </div>

				        <div class="col-12 col-lg-6 o_setting_box" id="jorrnal_retention_supplier">
		                    <div class="o_setting_left_pane">
		                    </div>
					        <div class="o_setting_right_pane">
	                            <div>
		                            <span class="o_form_label">Diario de Retenciones de Proveedor</span>
			                        <div class="text-muted">
			                            Ingrese el diario para las retenciones de proveedor
			                        </div>
	                                <field name="journal_retention_supplier" attrs="{'required':[('use_retention','=', True)]}" options="{'no_create_edit': True, 'no_open': True}"/>
	                            </div>
		                    </div>
		                </div>

				        <div class="col-12 col-lg-6 o_setting_box" id="cxc_customer">
		                    <div class="o_setting_left_pane">
		                    </div>
					        <div class="o_setting_right_pane">
						        <span class="o_form_label">Cuenta P/cobrar clientes</span>
		                        <div class="text-muted">
		                            Ingrese cuenta por cobrar de retenciones de clientes
		                        </div>
	                            <field name="account_retention_receivable_client" attrs="{'required':[('use_retention','=', True)]}" options="{'no_create_edit': True, 'no_open': True}"/>
		                    </div>
		                </div>

				        <div class="col-12 col-lg-6 o_setting_box" id="cxp_supplier">
		                    <div class="o_setting_left_pane">
		                    </div>
					        <div class="o_setting_right_pane">
						        <span class="o_form_label">Cuenta P/pagar proveedor</span>
		                        <div class="text-muted">
		                            Ingrese cuenta por pagar de retenciones de proveedores
		                        </div>
	                            <div>
	                                <field name="account_retention_to_pay_supplier" attrs="{'required':[('use_retention','=', True)]}" options="{'no_create_edit': True, 'no_open': True}"/>
	                            </div>
		                    </div>
		                </div>
		            </div>
				</xpath>
		        <xpath expr="//div[@id='invoicing_settings']" position="inside">
				    <div class="col-12 col-lg-6 o_setting_box">
	                    <div class="o_setting_right_pane">
		                     <span class="o_form_label">Máxima de productos facturables</span>
		                     <div class="text-muted">
	                            Ingresa la cantidad máxima de productos facturables
		                     </div>
		                     <div class="content-group">
		                         <div class="mt16 row">
		                             <label for="qty_max" string="Cantidad de Líneas" class="col-3 col-lg-3 o_light_label"/>
		                             <field name="qty_max" class="oe_inline" required="1"/>
		                         </div>
		                    </div>
		                </div>
	                </div>
				</xpath>
	        </field>
	  </record>
  </data>
</odoo>