	<!-- Ganancias y Pérdidas $ -->
        <record id="account_financial_report_profitandloss0_usd" model="account.financial.html.report">
            <field name="name">Ganancias y Pérdidas $</field>
            <field name="analytic" eval="True"/>
            <field name="unfold_all_filter" eval="True"/>
            <field name="show_journal_filter" eval="True"/>
	    <field name="usd" eval="True"/>
            <field name='parent_id' ref='account.account_reports_legal_statements_menu'/>
        </record>
        <record id="account_financial_report_net_profit0_usd" model="account.financial.html.report.line">
            <field name="name">Beneficio Bruto</field>
            <field name="code">NEP_USD</field>
            <field name="financial_report_id" ref="account_financial_report_profitandloss0_usd"/>
            <!-- Use the expanded computation for clarity -->
            <field name="formulas">OPINC_USD + OIN_USD - COS_USD - EXP_USD - DEP_USD</field>
            <field name="sequence" eval="3"/>
            <field name="level" eval="0" />
        </record>

        <record id="account_financial_report_totalincome0_usd" model="account.financial.html.report.line">
            <field name="name">Ingreso</field>
            <field name="code">INC_USD</field>
            <field name="formulas">OPINC_USD + OIN_USD</field>
            <field name="parent_id" eval="False"/>
            <field name="financial_report_id" ref="account_financial_report_profitandloss0_usd"/>
            <field name="sequence" eval="1"/>
            <field name="level" eval="0" />
        </record>

        <record id="account_financial_report_gross_profit0_usd" model="account.financial.html.report.line">
            <field name="name">Beneficio Bruto</field>
            <field name="code">GRP_USD</field>
            <field name="formulas">OPINC_USD - COS_USD</field>
            <field name="parent_id" ref='account_financial_report_totalincome0_usd'/>
            <field name="sequence" eval="1"/>
            <field name="level" eval="2" />
        </record>

        <record id="account_financial_report_income0_usd" model="account.financial.html.report.line">
            <field name="name">Ingreso Operativo</field>
            <field name="code">OPINC_USD</field>
            <field name="formulas">-sum</field>
            <field name="parent_id" ref='account_financial_report_gross_profit0_usd'/>
            <field name="domain" eval="[('account_id.user_type_id', '=', ref('account.data_account_type_revenue'))]" />
            <field name="groupby">account_id</field>
            <field name="sequence" eval="1"/>
            <field name="level" eval="3" />
        </record>

        <record id="account_financial_report_cost_sales0_usd" model="account.financial.html.report.line">
            <field name="name">Costo directo de las ventas</field>
            <field name="code">COS_USD</field>
            <field name="formulas">sum</field>
            <field name="parent_id" ref='account_financial_report_gross_profit0_usd'/>
            <field name="domain" eval="[('account_id.user_type_id', '=', ref('account.data_account_type_direct_costs'))]" />
            <field name="groupby">account_id</field>
            <field name="sequence" eval="3"/>
            <field name="green_on_positive" eval="False"/>
            <field name="level" eval="3" />
        </record>

        <record id="account_financial_report_other_income0_usd" model="account.financial.html.report.line">
            <field name="name">Otro Ingreso</field>
            <field name="code">OIN_USD</field>
            <field name="formulas">-sum</field>
            <field name="parent_id" ref='account_financial_report_totalincome0_usd'/>
            <field name="domain" eval="[('account_id.user_type_id', '=', ref('account.data_account_type_other_income'))]" />
            <field name="groupby">account_id</field>
            <field name="sequence" eval="2"/>
            <field name="level" eval="2" />
        </record>

        <record id="account_financial_report_less_expenses0_usd" model="account.financial.html.report.line">
            <field name="name">Gastos</field>
            <field name="code">LEX_USD</field>
            <field name="formulas">EXP_USD + DEP_USD</field>
            <field name="parent_id" eval="False"/>
            <field name="sequence" eval="2"/>
            <field name="financial_report_id" ref="account_financial_report_profitandloss0_usd"/>
            <field name="green_on_positive" eval="False"/>
            <field name="level" eval="0" />
        </record>
        <record id="account_financial_report_expense0_usd" model="account.financial.html.report.line">
