<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="">
        <!-- -->
        <record id="account_financial_report_estado_resultado" model="account.financial.html.report">
            <field name="name">Estado de Resultado</field>
            <field name="analytic" eval="True"/>
            <field name="unfold_all_filter" eval="True"/>
            <field name="show_journal_filter" eval="True"/>
            <field name='parent_id' ref='account.account_reports_legal_statements_menu'/>
        </record>

        <record id="account_financial_html_report_line_ingresos" model="account.financial.html.report.line">
            <field name="name">Ingresos</field>
            <field name="code">INC_BIN</field>
            <field name="financial_report_id" ref="account_financial_report_estado_resultado"/>
            <field name="formulas">-sum</field>
            <field name="domain" eval="[('account_id.user_type_id', 'in', [ref('account.data_account_type_revenue'),ref('account.data_account_type_other_income')])]"/>
            <field name="level" eval="0"/>
            <field name="sequence" eval="0"/>
            <field name="green_on_positive" eval="True"/>
            <field name="figure_type">float</field>
            <field name="show_domain">foldable</field>
        </record>

        <record id="account_financial_html_report_line_costo" model="account.financial.html.report.line">
            <field name="name">Costo</field>
            <field name="code">CTO_BIN</field>
            <field name="financial_report_id" ref="account_financial_report_estado_resultado"/>
            <field name="formulas">sum</field>
            <field name="domain" eval="[('account_id.user_type_id', '=', ref('account.data_account_type_direct_costs'))]"/>
            <field name="level" eval="0"/>
            <field name="sequence" eval="0"/>
            <field name="green_on_positive" eval="True"/>
            <field name="figure_type">float</field>
            <field name="show_domain">foldable</field>
        </record>

        <record id="account_financial_html_report_line_egreso" model="account.financial.html.report.line">
            <field name="name">Egreso</field>
            <field name="code">LEX_BIN</field>
            <field name="financial_report_id" ref="account_financial_report_estado_resultado"/>
            <field name="formulas">sum</field>
            <field name="domain" eval="[('account_id.user_type_id', 'in', [ref('account.data_account_type_expenses'),ref('account.data_account_type_depreciation')])]"/>
            <field name="level" eval="0"/>
            <field name="sequence" eval="0"/>
            <field name="green_on_positive" eval="True"/>
            <field name="figure_type">float</field>
            <field name="show_domain">foldable</field>
        </record>

        <record id="account_financial_html_report_line_ganancias_perdidas" model="account.financial.html.report.line">
            <field name="name">Ganancias y/o Perdidas</field>
            <field name="code">NEP_BIN</field>
            <field name="financial_report_id" ref="account_financial_report_estado_resultado"/>
            <field name="formulas">INC_BIN - (LEX_BIN + CTO_BIN)</field>
            <field name="level" eval="0"/>
            <field name="sequence" eval="0"/>
            <field name="green_on_positive" eval="True"/>
            <field name="figure_type">float</field>
            <field name="show_domain">foldable</field>
        </record>

    </data>
</odoo>
